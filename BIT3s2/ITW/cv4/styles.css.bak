body {
	margin: 0px;
}

header {
	background-color: #401c06;
}

header h1 {
	margin: 0px;
	padding: 20px;
	padding-bottom: 0px;
}

header h1 a {
	text-decoration: none;
	color: white;
	font: italic bold 45px Arial, sans-serif;
}

header h2 {
	margin: 0px;
	padding: 20px;
	color: #b5774a;
	padding-top: 0px;
	font: italic bold 20px Arial, sans-serif;
}

#menu {
	display: inline-flex;
	list-style-type: none;
	padding-left: 10px;
	margin-top: 50px;
	margin-bottom: 5px;
}

#menu li {
	padding-inline-start: 10px;
	padding-inline-end: 10px;
}

#menu li:hover img {
	display: block;
}

#menu li img {
	display: none;
	margin: 0 auto;
	padding-top: 5px;
}

#menu a {
	text-decoration: none;
	font: 13px Arial, sans-serif;
	color: white;
}



.nadpis {
	color: #b15e23;
	font: bold 17px Arial, sans-serif;
}

.podnadpis {
	font: bold 15px Arial, sans-serif;
	text-decoration: none;
	color: #3c1f0a;
}

hr {
	border: 1px dashed #b15e23;
}



main {
	background-image: linear-gradient(#ffffff, #e3e3e3);
	margin-top: -20px;
	padding-left: 20px;
}

/*main #predmet {
	color: #b15e23;
	font: bold 17px Arial, sans-serif;
}*/

main p {
	padding-bottom: 70px;
	color: #656565;
	font: 13px Arial, sans-serif;
}



#div_prednasky {
	padding-left: 20px;
}

#div_prednasky div {
	color: #656565;
	font: 13px Arial, sans-serif;
}



#div_vysledky {
	padding-left: 20px;
}



#div_cviceni {
	padding-left: 20px;
}

#div_cviceni div {
	color: #656565;
	font: 13px Arial, sans-serif;
}

#div_cviceni div img {
	margin-right: 20px;
}



footer {
	background-color: #451c08;
	padding-left: 20px;
	color: white;
	font: 15px Arial, sans-serif;
	padding-top: 20px;
	margin-top: 20px;
	padding-bottom: 15px;
}

footer a {
	color: #a37654;
	text-decoration: none;
}

footer ul {
	list-style-image: url('./imgs/footer_list_bullet.gif');
}
